# Stage 1: Build the Next.js application
FROM node:20-alpine AS builder

WORKDIR /app

# Accept build argument
ARG ENABLE_DYNAMIC_HTML=false
ARG ENABLE_DATA_GENERATION=false
ARG NEXT_PUBLIC_ENABLE_DATA_GENERATION=false
ARG NEXT_PUBLIC_DATA_GENERATION=false
ARG NEXT_ENABLE_DATA_GENERATION=false
ARG ENABLE_DB_MODE=false
ARG NEXT_PUBLIC_ENABLE_DB_MODE=false
ARG DATA_SEED_VALUE=
ARG NEXT_PUBLIC_DATA_SEED_VALUE=
ARG API_URL=
ARG NEXT_PUBLIC_API_URL=

COPY package.json package-lock.json ./

# Install dependencies (including dev dependencies needed for building)
RUN npm ci

COPY . .

# Set environment variables for build
ENV ENABLE_DYNAMIC_HTML=${ENABLE_DYNAMIC_HTML}
ENV NEXT_PUBLIC_ENABLE_DYNAMIC_HTML=${ENABLE_DYNAMIC_HTML}
ENV ENABLE_DATA_GENERATION=${ENABLE_DATA_GENERATION}
ENV NEXT_PUBLIC_ENABLE_DATA_GENERATION=${NEXT_PUBLIC_ENABLE_DATA_GENERATION}
ENV NEXT_PUBLIC_DATA_GENERATION=${NEXT_PUBLIC_DATA_GENERATION}
ENV NEXT_ENABLE_DATA_GENERATION=${NEXT_ENABLE_DATA_GENERATION}
ENV ENABLE_DB_MODE=${ENABLE_DB_MODE}
ENV NEXT_PUBLIC_ENABLE_DB_MODE=${NEXT_PUBLIC_ENABLE_DB_MODE}
ENV DATA_SEED_VALUE=${DATA_SEED_VALUE}
ENV NEXT_PUBLIC_DATA_SEED_VALUE=${NEXT_PUBLIC_DATA_SEED_VALUE}
ENV API_URL=${API_URL}
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}
ENV DOCKER_BUILD=true

# Debug: Print environment variables
RUN echo "üîç Build environment variables:"
RUN echo "  ENABLE_DYNAMIC_HTML: ${ENABLE_DYNAMIC_HTML}"
RUN echo "  NEXT_PUBLIC_ENABLE_DYNAMIC_HTML: ${ENABLE_DYNAMIC_HTML}"
RUN echo "  ENABLE_DATA_GENERATION: ${ENABLE_DATA_GENERATION}"
RUN echo "  NEXT_PUBLIC_ENABLE_DATA_GENERATION: ${NEXT_PUBLIC_ENABLE_DATA_GENERATION}"
RUN echo "  NEXT_PUBLIC_DATA_GENERATION: ${NEXT_PUBLIC_DATA_GENERATION}"
RUN echo "  NEXT_ENABLE_DATA_GENERATION: ${NEXT_ENABLE_DATA_GENERATION}"
RUN echo "  ENABLE_DB_MODE: ${ENABLE_DB_MODE}"
RUN echo "  NEXT_PUBLIC_ENABLE_DB_MODE: ${NEXT_PUBLIC_ENABLE_DB_MODE}"
RUN echo "  DATA_SEED_VALUE: ${DATA_SEED_VALUE}"
RUN echo "  NEXT_PUBLIC_DATA_SEED_VALUE: ${NEXT_PUBLIC_DATA_SEED_VALUE}"
RUN echo "  API_URL: ${API_URL}"
RUN echo "  NEXT_PUBLIC_API_URL: ${NEXT_PUBLIC_API_URL}"
RUN echo "  DOCKER_BUILD: ${DOCKER_BUILD}"

RUN npm run build

# Stage 2: Create the lean production image
FROM node:20-alpine AS runner

WORKDIR /app

ENV NODE_ENV production

ENV PORT 8012
EXPOSE 8012

COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./package.json

CMD ["npm", "start"]
